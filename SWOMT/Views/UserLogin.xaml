<Window x:Class="SWOMT.Views.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWOMT.Views"
        mc:Ignorable="d"
       Title="Login" Height="350" Width="550" FontSize="14" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="UserName" Foreground="White"></Label>
            <TextBox x:Name="username" Background="#545d6a" FontSize="18" Foreground="White"></TextBox>
            <Label Content="Password" Foreground="White"></Label>
            <TextBox x:Name="password" Background="#545d6a" FontSize="18" Foreground="White"></TextBox>
            <Button x:Name="submit" Click="LoginSubmit" Content="Submit" Margin="60 10" Background="#545d6a" FontSize="18" Foreground="White" ClickMode="Press"></Button>
        </StackPanel>


    </Border>
</Window>
